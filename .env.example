# CrystalNexus Configuration
# Copy this file to .env and modify as needed

# Application Settings
CRYSTALNEXUS_APP_NAME=CrystalNexus
CRYSTALNEXUS_HOST=0.0.0.0
CRYSTALNEXUS_PORT=8080
CRYSTALNEXUS_DEBUG=False

# Directory Configuration
CRYSTALNEXUS_TEMPLATE_DIR=templates
CRYSTALNEXUS_STATIC_DIR=static
CRYSTALNEXUS_SAMPLE_CIF_DIR=sample_cif

# File Processing Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_SUPERCELL_DIM=10

# Memory Management Settings
SESSION_CLEANUP_HOURS=6
PERIODIC_CLEANUP_INTERVAL=1800  # 30 minutes in seconds

# CHGNet Model Configuration
CHGNET_BATCH_SIZE=4
MAX_ATOMIC_NUMBER=94
MIN_SUPPORTED_ELEMENTS=50